
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all access to collections not explicitly defined
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to most content collections.
    // Write access is restricted to authenticated users.
    match /communities/{communityId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /federated_entities/{entityId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /political_parties/{partyId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /study_groups/{groupId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /chat_groups/{groupId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /proposals/{proposalId} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // Rules for posts and their comments
    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;

      // Rules for comments subcollection
      match /comments/{commentId} {
        allow read: if true;
        allow create, update, delete: if request.auth != null;
      }
    }

    // Allow authenticated users to create tutorials
    match /tutorials/{tutorialId} {
        allow read: if true;
        allow create: if request.auth != null;
    }

    // Users can only update their own profile data.
    // Anyone can read user profiles (necessary for showing author names, etc.).
    match /users/{userId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
