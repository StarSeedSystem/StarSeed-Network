rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAuthenticated() {
      return request.auth != null;
    }

    // --- REGLAS PARA PERFILES DE USUARIO ---
    match /users/{userId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    match /{path=**}/users/{userId} {
      allow read: if true;
    }

    // --- REGLAS PARA PUBLICACIONES Y COMENTARIOS ---
    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
      
      match /comments/{commentId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
    }
    
    // --- REGLAS PARA PROPUESTAS Y SUS COMENTARIOS ---
    match /proposals/{proposalId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();

      match /comments/{commentId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
    }
    
    // --- REGLAS PARA PÁGINAS PÚBLICAS Y SU CONTENIDO ANIDADO ---

    // Comunidades
    match /communities/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
      
      match /libraryItems/{itemId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
      match /collections/{collectionId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
    }

    // Entidades Federadas
    match /federated_entities/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();

      match /libraryItems/{itemId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
      match /collections/{collectionId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
    }

    // Partidos Políticos
    match /political_parties/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();

      match /libraryItems/{itemId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
      match /collections/{collectionId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
    }

    // Grupos de Estudio
    match /study_groups/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();

      match /libraryItems/{itemId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
      match /collections/{collectionId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
    }

    // --- OTRAS COLECCIONES DE NIVEL SUPERIOR ---
    match /chat_groups/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
    match /events/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
    match /tutorials/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
    match /cultural_posts/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
  }
}
