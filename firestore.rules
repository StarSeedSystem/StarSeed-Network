
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read on most collections
    match /{collection}/{docId} {
      allow read: if true;
    }

    // Allow authenticated users to create documents in most collections
    match /{collection}/{docId} {
        allow create: if request.auth != null;
    }
    
    // Allow users to update their own profile, but not others'.
    match /users/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // NEW RULE: Allow reading across the entire 'users' collection group.
    // This is required for the collection page to find the owner of a collection.
    // Write access is still restricted by the rule above.
    match /users/{document=**} {
      allow read: if true;
    }

    // Allow authenticated users to write to subcollections (like comments)
    match /{collection}/{docId}/{subcollection}/{subDocId} {
      allow write: if request.auth != null;
    }
  }
}
