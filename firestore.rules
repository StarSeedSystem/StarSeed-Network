rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Función para verificar si un usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // --- REGLAS PARA PERFILES DE USUARIO ---
    // Cualquiera puede leer un perfil, pero solo el propietario puede escribir en él.
    match /users/{userId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Esta regla es VITAL para que la página de Colecciones funcione,
    // ya que necesita buscar en todos los perfiles.
    match /{path=**}/users/{userId} {
      allow read: if true;
    }

    // --- REGLAS PARA PUBLICACIONES Y SUS COMENTARIOS ---
    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
      
      match /comments/{commentId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
    }
    
    // --- REGLAS PARA PROPUESTAS Y SUS COMENTARIOS ---
    match /proposals/{proposalId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();

      match /comments/{commentId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
    }
    
    // --- REGLAS PARA PÁGINAS PÚBLICAS Y CONTENIDO ---
    // Lectura pública, escritura solo para usuarios autenticados.
    
    match /communities/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
    
    match /federated_entities/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }

    match /political_parties/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
    
    match /study_groups/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }

    match /chat_groups/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }

    match /events/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }

    match /tutorials/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }

    match /cultural_posts/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
  }
}
