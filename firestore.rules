rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Función para verificar si un usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // --- REGLAS PARA USUARIOS ---
    // Cualquiera puede leer perfiles de usuario (necesario para ver autores de posts, etc.)
    // pero solo el propietario del perfil puede actualizarlo.
    match /users/{userId} {
      allow read: if true;
      allow update, delete: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Regla para permitir la consulta de grupo en la colección de usuarios
    // Esto es ESENCIAL para que la página de Colecciones funcione.
    match /{path=**}/users/{userId} {
      allow read: if true;
    }

    // --- REGLAS PARA PUBLICACIONES Y COMENTARIOS ---
    // Cualquiera puede leer posts, pero solo los usuarios autenticados pueden crear/actualizar.
    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
      
      // Cualquiera puede leer comentarios, pero solo los autenticados pueden comentar.
      match /comments/{commentId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
    }
    
    // --- REGLAS PARA PROPUESTAS Y SUS COMENTARIOS ---
    // Las propuestas son públicas, pero la creación/actualización requiere autenticación.
    match /proposals/{proposalId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();

      // Cualquiera puede leer comentarios, pero solo los autenticados pueden comentar.
      match /comments/{commentId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
    }
    
    // --- REGLAS GENÉRICAS PARA PÁGINAS PÚBLICAS ---
    // (Comunidades, Entidades, Partidos, Grupos de Estudio, Grupos de Chat, Eventos)
    // Son de lectura pública, pero la creación y actualización (como unirse) requiere autenticación.
    match /{collectionName}/{docId} 
        where collectionName in ['communities', 'federated_entities', 'political_parties', 'study_groups', 'chat_groups', 'events', 'tutorials', 'cultural_posts'] {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
  }
}