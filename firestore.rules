
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAuthenticated() {
      return request.auth != null;
    }

    // --- REGLAS PARA PERFILES DE USUARIO ---
    // Cualquiera puede leer un perfil, pero solo el propietario puede escribir en él.
    match /users/{userId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Esta regla es VITAL para que la página de Colecciones funcione,
    // ya que necesita buscar en todos los perfiles.
    match /{path=**}/users/{userId} {
      allow read: if true;
    }

    // --- REGLAS PARA PUBLICACIONES Y COMENTARIOS ---
    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
      
      match /comments/{commentId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
    }
    
    // --- REGLAS PARA PROPUESTAS Y SUS COMENTARIOS ---
    match /proposals/{proposalId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();

      match /comments/{commentId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }
    }
    
    // --- REGLAS PARA PÁGINAS PÚBLICAS Y SU CONTENIDO ANIDADO ---
    function publicPageRules() {
      return {
        // Cualquiera puede leer la página principal
        allow read: if true,
        // Solo usuarios autenticados pueden crear o unirse (actualizar 'members')
        allow create, update, delete: if isAuthenticated(),
        
        // --- BIBLIOTECA Y COLECCIONES PÚBLICAS ---
        // Cualquiera autenticado puede contribuir a la biblioteca o a las colecciones de la página.
        match /libraryItems/{itemId} {
          allow read: if true,
          allow create, update, delete: if isAuthenticated()
        },
        match /collections/{collectionId} {
          allow read: if true,
          allow create, update, delete: if isAuthenticated()
        }
      };
    }

    match /communities/{docId} { rules: publicPageRules(); }
    match /federated_entities/{docId} { rules: publicPageRules(); }
    match /political_parties/{docId} { rules: publicPageRules(); }
    match /study_groups/{docId} { rules: publicPageRules(); }

    // --- OTRAS COLECCIONES DE NIVEL SUPERIOR ---
    match /chat_groups/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
    match /events/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
    match /tutorials/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
    match /cultural_posts/{docId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
  }
}
